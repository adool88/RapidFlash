{
    "manifest_version": 2,
    "minimum_chrome_version": "33",
    "version": "0.8",

    "author": "cTn",
    "name": "RapidFlash",
    "short_name": "RapidFlash",
    "description": "Taking ESC flashing to the next level",

    "default_locale": "en",

    "app": {
        "background": {
            "scripts": [ "background.js" ]
        }
    },

    "permissions": [
        "https://www.google-analytics.com/",
        "https://*.github.com/",
        "http://www.openlrsng.org/",
        "serial",
        "storage",
        "fileSystem",
        "fileSystem.write",
        "notifications"
    ],

    "icons": {
        "128": "images/icon_128.png"
    }
}